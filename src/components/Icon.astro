---
// https://icon-sets.iconify.design/
import { Icon as AstroIcon } from 'astro-icon/components';
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<"svg"> {
    icon: string;
    class?: string;
    label?: string;
}

const { class: className, icon, label } = Astro.props;

const classes = [
    className,
    'min-h-5 overflow-visible align-middle inline',
];
---

<AstroIcon
    name={icon}
    class:list={classes}
    aria-label={label || `${icon.split(':').pop()} icon`}
    role="img"
/>
