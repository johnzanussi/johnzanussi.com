---
export interface Props {
    icon: string;
    class?: string;
    label?: string;
}

// https://iconify.design/
import { Icon as AstroIcon } from 'astro-iconify';

const { class: className, icon, label } = Astro.props;

const classes = [
    className,
    'icon',
];
---

<AstroIcon
    name={icon}
    class:list={classes}
    aria-label={label || `${icon.split(':').pop()} icon`}
/>
