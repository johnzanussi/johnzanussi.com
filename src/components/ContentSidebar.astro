---
import type { MarkdownHeading } from 'astro';

import '@/styles/content-sidebar.scss';

export type Props = {
    headings: MarkdownHeading[];
    url: string;
};

import TableOfContents from '@/components/TableOfContents/TableOfContents.astro';

const { headings } = Astro.props;
const hasHeadings = !!headings.length;
---
<aside class="content-sidebar post-content w-100 mx-auto sticky-xxl-top flex-grow-sm-1 align-self-xxl-start mt-sm-4 mb-3 mb-xxl-0 pb-2 pb-xxl-5 ps-xxl-5">

    {hasHeadings && <TableOfContents headings={headings} />}

</aside>
