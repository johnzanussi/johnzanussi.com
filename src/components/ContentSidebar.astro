---
import type { MarkdownHeading } from 'astro';

import '@/styles/content-sidebar.scss';

export type Props = {
    headings: MarkdownHeading[];
    url: string;
};

import BackToTop from '@/components/BackToTop.astro';
import TableOfContents from '@/components/TableOfContents/TableOfContents.astro';

const { headings } = Astro.props;
const hasHeadings = !!headings.length;
---
<aside class="content-sidebar sticky-xxl-top align-self-xxl-start mb-3 mb-xxl-0 ms-xxl-5 pb-2 pb-xxl-5 ps-xxl-5">

    {hasHeadings && <TableOfContents headings={headings} />}

    <BackToTop class="link-opacity-75 link-opacity-100-hover link-body-emphasis small ps-4 text-uppercase d-none d-xxl-block" />

</aside>
