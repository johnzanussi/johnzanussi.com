---
import AmazonProducts from '@/components/AmazonProducts.astro';
import Aside from '@/components/Aside.astro';
import Link from '@/components/Link.astro';
import WorkHistory from '@/components/WorkHistory.astro';
import YouTubeEmbed from '@/components/YouTubeEmbed.astro';

import Prose from '@/components/Prose.astro';

import Blockquote from '@/components/Markdown/Blockquote.astro';
import Columns from '@/components/Markdown/Columns.astro';
import Grid from '@/components/Markdown/Grid.astro';
import Image from '@/components/Markdown/Image.astro';
import Math from '@/components/Markdown/Math.astro';
import Table from '@/components/Markdown/Table.astro';
import Wire from '@/components/Markdown/Wire.astro';

const components = {
    a: Link,
    img: Image,
    table: Table,
    blockquote: Blockquote,
    Aside: Aside,
    AmazonProducts: AmazonProducts,
    Link: Link,
    Math: Math,
    Wire: Wire,
    Columns: Columns,
    Grid: Grid,
    WorkHistory: WorkHistory,
    YouTubeEmbed: YouTubeEmbed,
};

const { Content } = Astro.props;
---

<Prose class="mb-4">
    <Content components={components} />
</Prose>
