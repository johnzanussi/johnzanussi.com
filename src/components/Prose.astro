---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<Tag extends HTMLTag> = Polymorphic<{
    as: Tag,
    class?: string
}>;

const {
    class: className = '',
    as: Element = 'div',
    ...props
} = Astro.props;
---

<Element
    class:list={['prose dark:prose-invert', className]}
    {...props}
>
    <slot />
</Element>
