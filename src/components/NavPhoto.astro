---
import { Image } from 'astro:assets';

import imgJZ from '@/assets/img-john-zanussi-kiddo.jpg';

export type Props = {
    class?: string;
    sizes?: string;
};

const {
    class: className,
    sizes = '(min-width: 1200px) 250px, (min-width: 780px) 182px, 125px',
    ...props
} = Astro.props;

const size = 75;
---

<Image
    src={imgJZ}
    alt="portrait of John Zanussi wearing sunglasses with his daughter on his shoulders"
    class:list={['rounded-full ring ring-4 ring-sky-950 w-[75px]', className]}
    width={size}
    height={size}
    loading="eager"
    widths={[37, 74, 125, 250, 500]}
    sizes={sizes}
    {...props}
/>
