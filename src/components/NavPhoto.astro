---
import Link from '@/components/Link.astro';
import { Image } from 'astro:assets';

import imgJZ from '@/assets/img-john-zanussi-kiddo.jpg';

export type Props = {
    class?: string;
    sizes?: string;
};

const {
    class: className,
    sizes = '(min-width: 1200px) 250px, (min-width: 780px) 182px, 125px',
    ...props
} = Astro.props;
---
<Link
    href="/"
    class:list={['d-block', className]}
    {...props}
>

    <Image
        src={imgJZ}
        alt="portrait of John Zanussi wearing sunglasses with his daughter on his shoulders"
        class="rounded-circle shadow img-fluid nav-photo-img"
        width={250}
        height={250}
        loading="eager"
        widths={[37, 74, 125, 250, 500]}
        sizes={sizes}
    />

</Link>
