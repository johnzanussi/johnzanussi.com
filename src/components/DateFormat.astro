---
import {
    isDate,
    parseISO,
    format,
} from 'date-fns';

const {
    date,
    formatStr = 'LLLL d, yyyy',
    ...props
} = Astro.props;

const dateToFormat = isDate(date) ? date : parseISO(date);
---

<time datetime={format(dateToFormat, 'yyyy-MM-dd')} {...props}>
    {format(dateToFormat, formatStr)}
</time>
